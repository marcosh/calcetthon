{
    "swagger": "2.0",
    "info": {
        "version": "0.1.0",
        "title": "Calcetthon API",
        "license": {
            "name": "All Rights Reserved"
        },
        "description": "The API for our foosball scores"
    },
    "definitions": {
        "email": {
            "example": "gigi@zucon.com",
            "format": "email",
            "type": "string",
            "description": "email"
        },
        "UUID": {
            "example": "00000000-0000-0000-0000-000000000000",
            "format": "uuid",
            "type": "string"
        },
        "GameId": {
            "required": [
                "uuid_"
            ],
            "type": "object",
            "properties": {
                "uuid_": {
                    "$ref": "#/definitions/UUID"
                }
            }
        },
        "Game": {
            "type": "object",
            "properties": {
                "gameId": {
                    "$ref": "#/definitions/GameId"
                },
                "gameData": {
                    "$ref": "#/definitions/GameData"
                }
            }
        },
        "GameData": {
            "required": [
                "redTeam",
                "blueTeam"
            ],
            "type": "object",
            "properties": {
                "redTeam": {
                    "$ref": "#/definitions/TeamData"
                },
                "blueTeam": {
                    "$ref": "#/definitions/TeamData"
                }
            }
        },
        "Day": {
            "example": "2016-07-22",
            "format": "date",
            "type": "string"
        },
        "TeamData": {
            "required": [
                "team",
                "score"
            ],
            "type": "object",
            "properties": {
                "score": {
                    "maximum": 6,
                    "minimum": 0,
                    "type": "integer"
                },
                "team": {
                    "$ref": "#/definitions/Team"
                }
            }
        },
        "Team": {
            "required": [
                "defence",
                "attack"
            ],
            "type": "object",
            "properties": {
                "defence": {
                    "$ref": "#/definitions/PlayerId"
                },
                "attack": {
                    "$ref": "#/definitions/PlayerId"
                }
            }
        },
        "Players": {
            "required": [
                "list"
            ],
            "type": "object",
            "properties": {
                "list": {
                    "items": {
                        "$ref": "#/definitions/Player"
                    },
                    "type": "array"
                }
            }
        },
        "Player": {
            "required": [
                "playerId_",
                "playerData_"
            ],
            "type": "object",
            "properties": {
                "playerData_": {
                    "$ref": "#/definitions/PlayerData"
                },
                "playerId_": {
                    "$ref": "#/definitions/PlayerId"
                }
            }
        },
        "PlayerData": {
            "required": [
                "name",
                "surname",
                "nickname",
                "birthDate",
                "email"
            ],
            "type": "object",
            "properties": {
                "email": {
                    "$ref": "#/definitions/email"
                },
                "name": {
                    "type": "string"
                },
                "nickname": {
                    "type": "string"
                },
                "surname": {
                    "type": "string"
                },
                "birthDate": {
                    "$ref": "#/definitions/Day"
                }
            }
        },
        "PlayerId": {
            "required": [
                "uuid_"
            ],
            "type": "object",
            "properties": {
                "uuid_": {
                    "$ref": "#/definitions/UUID"
                }
            }
        }
    },
    "paths": {
        "/game/{gameId}": {
            "get": {
                "responses": {
                    "404": {
                        "description": "`gameId` not found"
                    },
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/Game"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json;charset=utf-8"
                ],
                "parameters": [
                    {
                        "format": "uuid",
                        "required": true,
                        "in": "path",
                        "name": "gameId",
                        "type": "string"
                    }
                ]
            }
        },
        "/add-new-player": {
            "post": {
                "consumes": [
                    "application/json;charset=utf-8"
                ],
                "responses": {
                    "400": {
                        "description": "Invalid `body`"
                    },
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/PlayerId"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json;charset=utf-8"
                ],
                "parameters": [
                    {
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/PlayerData"
                        },
                        "in": "body",
                        "name": "body"
                    }
                ]
            }
        },
        "/players": {
            "get": {
                "responses": {
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/Players"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json;charset=utf-8"
                ]
            }
        },
        "/record-game": {
            "post": {
                "consumes": [
                    "application/json;charset=utf-8"
                ],
                "responses": {
                    "400": {
                        "description": "Invalid `body`"
                    },
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/GameId"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json;charset=utf-8"
                ],
                "parameters": [
                    {
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/GameData"
                        },
                        "in": "body",
                        "name": "body"
                    }
                ]
            }
        }
    }
}